<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activite2"
    android:background="@color/teal_200">

    <TextView
        android:id="@+id/res"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Veillez s'il vous plait entrer les informations du patient"
        android:textSize="20dp"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/p_nom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:hint="Nom"
                android:inputType="text"
                android:textAlignment="center"
                android:textSize="20dp"


                />

            <EditText
                android:id="@+id/p_prenom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:hint="Prenom"
                android:inputType="text"
                android:textAlignment="center"
                android:textSize="20dp"


                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:hint="Âge"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:hint="Poids (Kg)"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="20dp"

                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:inputType="number"
                android:hint="Taille (Mètres)"
                android:textAlignment="center"
                android:textSize="20dp"

                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:hint="veillez s'il vous plait entrer la date du jour"
                android:inputType="date"
                android:textAlignment="center"
                android:textSize="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:hint="@string/veillez_entrer_la_dare_l_heur_d_enregistrement"
                android:inputType="datetime"
                android:textAlignment="center"
                android:textSize="20dp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/b_next"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Next"
                android:textSize="20dp"

                />
        </LinearLayout>
    </ScrollView>


</LinearLayout>